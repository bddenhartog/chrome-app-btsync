{
    "manifest_version": 2,
    "name": "BitTorrent Sync GUI",
    "short_name": "Sync",
    "version": "1.0.1",
    "description": "A Chrome application for BitTorrent Sync.",
    "options_page": "dist/html/options.html",

    "app": {
        "launch": {
            "local_path": "dist/html/redirect.html"
        }
    },

    "permissions": [
        "storage"
    ],

    "icons": {
        "16": "dist/img/btsync-16.png",
        "32": "dist/img/btsync-32.png",
        "128": "dist/img/btsync-128.png"
    }
}
